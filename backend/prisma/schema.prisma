model Profile {
  id           Int       @id @default(autoincrement())
  bio          String?
  phone        String?
  dateOfBirth  DateTime?
  address      String?
  city         String?
  country      String?
  coverPicture String?
  userId       String    @unique
  user         User      @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  ADMIN
}

enum GENDER {
  MALE
  FEMALE
}
